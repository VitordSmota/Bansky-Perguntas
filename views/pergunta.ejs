<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h3 class="perguntaTitulo"><%= pergunta.titulo %></h3>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
                <h3>Responda</h3>
                <label> Resposta:</label>
                <textarea name="resposta" class="form-control" placeholder="Digite sua resposta">
                </textarea>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-primary btn-bansky">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta =>{ %>
       
        <div class="card">
            <div class="card-body">
                <p> <%= resposta.resposta %> </p>
            </div>
        </div>
        <% }) %>
    </div>
      
    <%- include('partials/navbar-footer.ejs') %>
</body>
<%- include('partials/footer.ejs') %>